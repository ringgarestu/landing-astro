---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import { NextUIProvider } from "@nextui-org/react";
import { ThemeProvider as NextThemeProvider } from "next-themes";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="./assets/PestDoc-AI-Logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NextUIProvider>
      <NextThemeProvider enableSystem attribute="class" defaultTheme="light" disableTransitionOnChange themes={["light", "dark", "system"]}>
        <slot />
      </NextThemeProvider>
    </NextUIProvider>
  </body>
</html>
